{
    "title": "User OG Image Generator",
    "description": "Takes a screenshot of an public Apify user's detail page, and generates a nice image for sharing.",
    "type": "object",
    "schemaVersion": 1,
    "properties": {
        "fullName": {
            "title": "User full name",
            "type": "string",
            "description": "The user's full name",
            "editor": "textfield",
            "prefill": "Apify"
        },
        "username": {
            "title": "Username",
            "type": "string",
            "description": "The user's username",
            "editor": "textfield",
            "prefill": "apify"
        },
        "imgUrl": {
            "title": "User image url",
            "type": "string",
            "description": "A link to the user's profile image",
            "editor": "textfield",
            "prefill": "https://apifyusercontent.com/6c4baf19c78267d40118879f3ff63e5e235021b6/68747470733a2f2f61706966792d696d6167652d75706c6f6164732d70726f642e73332e616d617a6f6e6177732e636f6d2f6175725052544834374b686d6961504e4a2f77703265485759395772354b77375774542d3436313038342e6a7067"
        },
        "type": {
            "title": "Image format",
            "type": "string",
            "description": "Choose whether you want the image to be in JPEG or PNG format",
            "editor": "select",
            "prefill": "jpeg",
            "default": "jpeg",
            "enum": [
                "jpeg",
                "png"
            ],
            "enumTitles": [
                "JPEG",
                "PNG"
            ]
        },
        "debug": {
            "title": "Debug",
            "type": "boolean",
            "description": "In case you want to store the HTML and slow it down.",
            "editor": "checkbox"
        }
    },
    "required": [
        "fullName",
        "username",
        "imgUrl",
        "type"
    ]
}
